# A simple script for running the faulty model checker
echo "----------------------------Memory test----------------------------"
echo "3 bits"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/memoryCell/memoryCell3nominal.test ../tests/maskingDistance/memoryCell/memoryCell3.test
echo "5 bits"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/memoryCell/memoryCell5nominal.test ../tests/maskingDistance/memoryCell/memoryCell5.test
echo "7 bits"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/memoryCell/memoryCell7nominal.test ../tests/maskingDistance/memoryCell/memoryCell7.test

echo "----------------------------Philosophers test (odd/even model)----------------------------"
echo "2 phils"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/phils/phils2nominal.test ../tests/maskingDistance/phils/phils2.test
echo "3 phils"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/phils/phils3nominal.test ../tests/maskingDistance/phils/phils3.test
echo "4 phils"
time java -Xss5m -jar $FAULTY/dCTL_checker.jar -m ../tests/maskingDistance/phils/phils4nominal.test ../tests/maskingDistance/phils/phils4.test

