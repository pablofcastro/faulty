
Process Producer uses B {

temp: INT;
safety:BOOL;

INIT: safety == TRUE;

NORMATIVE:temp > 1;

B.get() == TRUE -> safety=FALSE, C.put(1)=23;

safety==FALSE -> temp=(temp + 1), B.put(0)=FALSE;
}




Process Consumer uses B{

temp: INT;
safety:BOOL;

INIT: temp==10;

NORMATIVE:temp > 1;

safety == TRUE -> safety=FALSE, temp=23;

}



Main() {

  p1: Producer;
  p2: Producer;
  c1: Consumer;

  Run p1();
  Run p2();
  Run c1();
}
