MODULE Circuit(x,y,z)
ASSIGN
   init(x) := TRUE;
   init(y) := TRUE;
   init(z) := TRUE;
   

   next(x) :=
	case
	   (x=z)&(x=y) : {x, !x};
	   (x=z)&!(y=z)   : !x;
	   TRUE        : x;	
        esac;
   next(y) :=
	case
          (y=z)&(y=x) : {y, !y};
          (y=z)&!(x=z) : !y;
          TRUE : y;
	esac;

   next(z) := (next(x)&next(y) | next(x)&z | next(y)&z);
   
DEFINE
   n := x=y;	

MODULE Join(z1, z2, z3)


ASSIGN
   init(z3) := TRUE;
  
   next(z3) := ((z1 & z2) | (z2 & z3) | (z1 & z3) );
    
        

